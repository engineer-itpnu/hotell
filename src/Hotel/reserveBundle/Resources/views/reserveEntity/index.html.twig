{% set parent="" %}
{% if is_granted("ROLE_ADMIN") %}
    {% set parent= 'HotelreserveBundle::layout_admin.html.twig' %}
{% elseif is_granted("ROLE_HOTELDAR") %}
    {% set parent= 'HotelreserveBundle::layout_hotel.html.twig' %}
{% elseif is_granted("ROLE_AGENCY") %}
    {% set parent= 'HotelreserveBundle::layout_agency.html.twig' %}
{% endif  %}
{% extends parent %}
{% block content -%}
    <section class="container"  style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #4d3d98;display: block;">
                <div class="" style="background: #4d3d98;height: 36px;display: block;">
                    <span class="" style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>نمایش لیست اتاق های رزرو شده</strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody>
                            <table class="table table-bordered" dir="rtl">
                                <thead >
                                <tr>
                                    <th style="text-align: center">ردیف </th>
                                    <th style="text-align: center">تاریخ ورود مسافر</th>
                                    <th style="text-align: center">تعداد شب </th>
                                    <th style="text-align: center">جمع هزینه اقامت</th>
                                    <th style="text-align: center">کد پیگیری</th>
                                    <th style="text-align: center">واچر</th>
                                    <th style="text-align: center">اقدامات </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td style="text-align: center"><a href="{{ path('reserveentity_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td style="text-align: center">{% if entity.DateInp %}{{ DateConvert.MiladiToShamsi(entity.DateInp) }}{% endif %}</td>
                                        <td style="text-align: center">{{ entity.CountNight }}</td>
                                        <td style="text-align: center">{{ entity.Money }}</td>
                                        <td style="text-align: center">{{ entity.CodePey }}</td>
                                        <td style="text-align: center">{{ entity.Voucher }}</td>
                                        <td style="text-align: center">
                                            <ul style="text-align: center;list-style-type: none">
                                                <li>
                                                    <a class="badge badge-success" href="{{ path('reserveentity_show', { 'id': entity.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a class="badge badge-info" href="{{ path('reserveentity_edit', { 'id': entity.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination-centered pagination">
                                {{ knp_pagination_render(entities) }}
                            </div>
                            <ul style="list-style-type: none">
                                {#<li>
                                    <a class="btn btn-primary" href="{{ path('reserveentity_new') }}">
                                        ایجاد
                                    </a>
                                </li>#}
                            </ul>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

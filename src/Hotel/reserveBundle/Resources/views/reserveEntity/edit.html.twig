{% extends 'HotelreserveBundle::layout_admin.html.twig' %}
{% block content -%}
    <section class="container"  style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #74B749;display: block;">
                <div class="" style="background: #74B749;height: 36px;display: block;">
                    <span class="" style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>ویرایش اطلاعات پایه ای هتل ها</strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody>

                            <tbody>
                            <form action="{{ path('reserveentity_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                                <input type="hidden" name="_method" value="PUT"/>

                                <tr class="success">
                                    <td>
                                        {{ form_label(edit_form.DateInp,'تاریخ ورود مسافر :') }}</td><td>
                                        {{ form_errors(edit_form.DateInp) }}
                                        {{ form_widget(edit_form.DateInp) }} </td><td></td></td><td></tr>
                                <tr class="info">
                                    <td>
                                        {{ form_label(edit_form.CountNight,'تعداد شب اقامت : ') }}</td><td>
                                        {{ form_errors(edit_form.CountNight) }}
                                        {{ form_widget(edit_form.CountNight) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.Money,'جمع هزینه اقامت : ') }}</td><td>
                                        {{ form_errors(edit_form.Money) }}
                                        {{ form_widget(edit_form.Money) }}
                                    </td>

                                </tr>
                                <tr class="success">
                                    <td>
                                        {{ form_label(edit_form.CodePey,'کد پیگیری : ') }}</td><td>
                                        {{ form_errors(edit_form.CodePey) }}
                                        {{ form_widget(edit_form.CodePey) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.Voucher,'واچر : ') }}</td><td>
                                        {{ form_errors(edit_form.Voucher) }}
                                        {{ form_widget(edit_form.Voucher) }}
                                    </td>

                                </tr>
                                <tr class="info">
                                    <td>
                                        {{ form_label(edit_form.customerEntity,'نام مشتری : ') }}</td><td>
                                        {{ form_errors(edit_form.customerEntity) }}
                                        {{ form_widget(edit_form.customerEntity) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.agencyEntity,'نام آژانس : ') }}</td><td>
                                        {{ form_errors(edit_form.agencyEntity) }}
                                        {{ form_widget(edit_form.agencyEntity) }}
                                    </td>
                                </tr>

                                {{ form_widget(edit_form._token) }}
                                <ul style="list-style-type: none"><li>
                                        <button class="btn btn-success tabs-right" type="submit" style="margin-right: 400px">ویرایش</button></li></ul>
                            </form>
                            <tr class="record_actions" style="list-style-type: none">
                                <td><a class="btn btn-primary" href="{{ path('reserveentity') }}">برگشت </a></td>


                            </tr>
                            <td>
                                {{ form(delete_form) }}</td>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

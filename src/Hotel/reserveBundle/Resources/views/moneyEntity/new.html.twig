{% set parent="" %}
{% if is_granted("ROLE_ADMIN") %}
    {% set parent= 'HotelreserveBundle::layout_admin.html.twig' %}
{% elseif is_granted("ROLE_HOTELDAR") %}
    {% set parent= 'HotelreserveBundle::layout_hotel.html.twig' %}
{% elseif is_granted("ROLE_AGENCY") %}
    {% set parent= 'HotelreserveBundle::layout_reserve.html.twig' %}
{% endif  %}
{% extends parent %}
{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #d24827;display: block;">
                <div class="" style="background: #d24827;height: 36px;display: block;">
                    <span class=""
                          style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>ایجاد درخواست برداشت - واریز وجه </strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <table class="table table-condensed" style="width: 100%;">
                            <form action="{{ path('moneyentity_create') }}" method="post" {{ form_enctype(form) }}>
                                <tbody>
                                <tr class="success">
                                    <td>
                                        {{ form_label(form.money_price,'مبلغ : ') }}
                                        {{ form_errors(form.money_price) }}
                                        {{ form_widget(form.money_price,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                    <td>
                                        {% if is_granted('ROLE_HOTELDAR') %}
                                            {{ form_label(form.hotelEntity,'هتل : ') }}
                                            {{ form_errors(form.hotelEntity) }}
                                            {{ form_widget(form.hotelEntity, {'required':'' }) }}
                                        {% endif %}
                                    </td>
                                </tr>
                                {% if is_granted('ROLE_AGENCY') %}
                                <tr class="info">
                                    <td>
                                        {{ form_label(form.money_NumBill,'شماره فیش بانکی : ') }}
                                        {{ form_errors(form.money_NumBill) }}
                                        {{ form_widget(form.money_NumBill,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                    <td style="padding-left: 140px;">
                                        {{ form_label(form.money_DateBill,'تاریخ فیش بانکی : ') }}
                                        {{ form_errors(form.money_DateBill) }}
                                        {{ form_widget(form.money_DateBill,{'id':'pcal1'}) }}
                                    </td>
                                </tr>
                                <tr class="success">
                                    <td style="padding-left: 140px;">
                                        {{ form_label(form.money_BankName,'نام بانک : ') }}
                                        {{ form_errors(form.money_BankName) }}
                                        {{ form_widget(form.money_BankName,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                    </td>
                                    <td style="padding-left: 140px;">
                                        {{ form_label(form.money_branch,'نام-شماره شعبه : ') }}
                                        {{ form_errors(form.money_branch) }}
                                        {{ form_widget(form.money_branch, {'required':'' }) }}
                                    </td>
                                </tr>
                                {% endif %}
                                {{ form_widget(form._token) }}
                                <table>
                                    <button class="btn btn-primary" style="margin-right:475px" type="submit">ایجاد
                                    </button>
                                </table>
                                <ul class="record_actions" style="list-style-type: none">
                                    <li>
                                        <a class="btn btn-primary" href="javascript:history.back();">
                                            برگشت
                                        </a>
                                    </li>
                                </ul>
                                </tbody>
                            </form>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

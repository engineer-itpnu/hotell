{% extends 'HotelreserveBundle::layout_admin.html.twig' %}

{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #74B749;display: block;">
                <div class="" style="background: #74B749;height: 36px;display: block;">
                    <span class=""
                          style="float: right;margin: 2px 0 0 5px;padding: 6px 5px 6px 10px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong> لیست هتل های شما </strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <table class="table table-bordered table-condensed" dir="rtl" style="width: 100%;">
                        <thead>
                        <tr class="">
                            <th style="text-align: center">کد هتل</th>
                            <th style="text-align: center">نام هتل</th>
                            <th style="text-align: center">مدیر هتل</th>
                            <th style="text-align: center">درجه هتل</th>
                            <th style="text-align: center">شهر اقامت</th>
                            <th style="text-align: center">کدپستی هتل</th>
                            <th style="text-align: center">ایمیل</th>
                            <th style="text-align: center">شماره تلفن</th>
                            <th style="text-align: center">شماره موبایل</th>
                            <th style="text-align: center">تعرفه هر نفر اضافه</th>
                            <th style="text-align: center">دسترسی</th>
                            <th style="text-align: center">اقدامات</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td style="text-align: center">{{ entity.id }}</td>
                                <td style="text-align: center">{{ entity.hotelname }}</td>
                                <td style="text-align: center">{{ entity.hotelmanageName }}</td>
                                <td style="text-align: center">{{ entity.hotelgrade }}</td>
                                <td style="text-align: center">{{ entity.hotelcity }}</td>
                                <td style="text-align: center">{{ entity.hotelzipcode }}</td>
                                <td style="text-align: center">{{ entity.hotelemail }}</td>
                                <td style="text-align: center">{{ entity.hotelphone }}</td>
                                <td style="text-align: center">{{ entity.hotelmobile }}</td>
                                <td style="text-align: center"
                                    class="MoneyComma">{{ entity.hoteladdRoomTtariff }}</td>
                                <td style="text-align: center">{% if entity.hotelactive==1 %}
                                         فعال
                                    {% else %}
                                         غیرفعال
                                    {% endif %}

                                </td>
                                <td style="text-align: center">
                                    <ul style="list-style-type: none;">
                                        <li style="padding-top: 5px;">
                                            <a class="badge badge-info"
                                               href="{{ path('admin_hotel_edit', { 'id': entity.id }) }}">ویرایش
                                                هتل</a>
                                        </li>
                                        <li style="padding-top: 5px;">
                                            <a class="badge badge-success"
                                               href="{{ path('admin_room_index', { 'hotel_id': entity.id }) }}">لیست
                                                اتاق های هتل</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="pagination-centered pagination">
                        {{ knp_pagination_render(entities) }}
                    </div>
                    <ul style="list-style-type: none">
                        <li>
                            <a class="btn btn-success" href="{{ path('admin_hotel_new') }}">
                                ایجاد هتل جدید
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

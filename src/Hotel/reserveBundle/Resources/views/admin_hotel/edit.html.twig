{% extends 'HotelreserveBundle::layout_admin.html.twig' %}

{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #74B749;display: block;">
                <div class="" style="background: #74B749;height: 36px;display: block;">
                    <span class=""
                          style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>ویرایش اطلاعات پایه ای هتل ها</strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <form method="post" {{ form_enctype(edit_form) }}>
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody>
                                <tr class="success">
                                    <td>
                                        {{ form_label(edit_form.hotel_name,'نام هتل : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_name) }}
                                        {{ form_widget(edit_form.hotel_name,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.hotel_manageName,'مدیر هتل : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_manageName) }}
                                        {{ form_widget(edit_form.hotel_manageName,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                    </td>
                                </tr>
                                <tr class="info">
                                    <td>
                                        {{ form_label(edit_form.hotel_grade,'درجه هتل : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_grade) }}
                                        {{ form_widget(edit_form.hotel_grade,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.hotel_city,'شهر اقامت : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_city) }}
                                        {{ form_widget(edit_form.hotel_city,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                    </td>
                                </tr>
                                <tr class="success">
                                    <td>
                                        {{ form_label(edit_form.hotel_zipcode,'کدپستی هتل : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_zipcode) }}
                                        {{ form_widget(edit_form.hotel_zipcode,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.hotel_email,'ایمیل : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_email) }}
                                        {{ form_widget(edit_form.hotel_email) }}
                                    </td>
                                </tr>
                                <tr class="info">
                                    <td>
                                        {{ form_label(edit_form.hotel_phone,'شماره تلفن : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_phone) }}
                                        {{ form_widget(edit_form.hotel_phone,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.hotel_mobile,'شماره موبایل : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_mobile) }}
                                        {{ form_widget(edit_form.hotel_mobile,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                </tr>
                                <tr class="success">
                                    <td>
                                        {{ form_label(edit_form.hotel_addRoomTtariff,'تعرفه هر نفر اضافه : ') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_addRoomTtariff) }}
                                        {{ form_widget(edit_form.hotel_addRoomTtariff,{ 'attr' : {'class':'MoneyComma','onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                    </td>
                                    <td>
                                        {{ form_label(edit_form.userEntity,'متعلق به نام کاربری') }}</td>
                                    <td>
                                        {{ form_errors(edit_form.userEntity) }}
                                        {{ form_widget(edit_form.userEntity) }}
                                    </td>
                                </tr>
                                <tr class="info">
                                    <td>
                                        {{ form_label(edit_form.hotel_active,'سطح دسترسی : ') }}
                                    </td>
                                    <td>
                                        {{ form_errors(edit_form.hotel_active) }}
                                        {{ form_widget(edit_form.hotel_active) }}
                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                            {{ form_widget(edit_form._token) }}
                            <a class="btn btn-primary" href="{{ path('admin_hotel_index') }}">برگشت </a>
                            <button class="btn btn-success tabs-right" type="submit">ویرایش</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
    <h1>blankEntity list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datein</th>
                <th>Countnight</th>
                <th>Tariff</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('blank_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dateIN %}{{ entity.dateIN|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.countNight }}</td>
                <td>{{ entity.Tariff }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('blank_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('blank_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('blank_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

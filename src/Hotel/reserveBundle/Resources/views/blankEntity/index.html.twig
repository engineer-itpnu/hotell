{% extends 'HotelreserveBundle::layout_admin.html.twig' %}
{% block content -%}
<section class="container"  style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
    <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
        <div class="" style="border: 1px solid #74B749;display: block;">
            <div class="" style="background: #74B749;height: 36px;display: block;">
                    <span class="" style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>نمایش لیست اطلاعات پایه هتل ها</strong>
                    </span>
            </div>
            <div class="" style="display: block;padding: 25px 15px;">
                <div class="">
                    <table class="table table-condensed" style="width: 100%;">
                        <tbody>
                        <table class="table table-bordered" dir="rtl">
                            <thead >
            <tr>
                <th style="text-align: center">ردیف</th>
                <th style="text-align: center">تاریخ ورود</th>
                <th style="text-align: center">تعداد شب اقامت</th>
                <th style="text-align: center">تعرفه هر نفر</th>
                <th style="text-align: center">کد اتاق - نوع اتاق</th>
                <th style="text-align: center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td style="text-align: center"><a href="{{ path('blankentity_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td style="text-align: center">{% if entity.dateIN %}{{ entity.dateIN|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td style="text-align: center">{{ entity.countNight }}</td>
                <td style="text-align: center">{{ entity.Tariff }}</td>
                <td style="text-align: center">{{ entity.roomEntity }}</td>

                <td style="text-align: center">
                    <ul style="list-style-type: none">
                        <li>
                            <a class="badge badge-success" href="{{ path('blankentity_show', { 'id': entity.id }) }}">نمایش</a>
                        </li>
                        <li>
                            <a class="badge badge-info" href="{{ path('blankentity_edit', { 'id': entity.id }) }}">ویرایش</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                        <ul style="list-style-type: none">
                            <li>
                                <a class="btn btn-primary" href="{{ path('blankentity_new') }}">ایجاد اتاق خالی</a>
                            </li>
                        </ul></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% extends 'HotelreserveBundle::layout_admin.html.twig' %}
{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #88288f;display: block;">
                <div class="" style="background: #88288f;height: 36px;display: block;">
                    <span class=""
                          style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>ایجاد اتاق خالی هتل</strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <table class="table table-condensed" style="width: 100%;">
                            <form action="{{ path('blankentity_create') }}" method="post" {{ form_enctype(form) }}>
                                <tbody>
                                <tr class="success">
                                    <td>
                                        {{ form_label(form.dateIN,'تاریخ ورود : ') }}
                                        {{ form_errors(form.dateIN) }}
                                        {{ form_widget(form.dateIN) }}
                                    </td>
                                    <td>
                                        {{ form_label(form.status,'وضعیت اتاق : ') }}
                                        {{ form_errors(form.status) }}
                                        {{ form_widget(form.status) }}
                                    </td>
                                </tr>
                                <tr class="info">
                                    <td style="padding-left: 140px;">
                                        {{ form_label(form.Tariff,'تعرفه اتاق : ') }}
                                        {{ form_errors(form.Tariff) }}
                                        {{ form_widget(form.Tariff) }}
                                    </td>
                                    <td></td>
                                </tr>
                                {{ form_widget(form._token) }}
                                <table>
                                    <button class="btn btn-primary" style="margin-right:475px" type="submit">ایجاد
                                    </button>
                                </table>
                                <ul class="record_actions" style="list-style-type: none">
                                    <li>
                                        <a class="btn btn-primary" href="javascript:history.back();">
                                            برگشت
                                        </a>
                                    </li>
                                </ul>
                                </tbody>
                            </form>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends 'HotelreserveBundle::layout_admin.html.twig' %}

{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div style="border: 1px solid #4d3d98;display: block;">
                <div style="background: #4d3d98;height: 36px;display: block;">
                    <span style="float: right;margin: 2px 0 0 5px;padding: 6px 5px 6px 10px; color: #fff; font-size: 14px;">
                            <a href="" class="icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>ویرایش اطلاعات پایه ای هتل ها</strong>
                    </span>
                </div>
                <div style="display: block;padding: 25px 15px;">
                    <form method="post" {{ form_enctype(edit_form) }}>
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody>
                            <tr class="success">
                                <td>نام مشتری :</td>
                                <td>
                                    {{ form_errors(edit_form.cust_name) }}
                                    {{ form_widget(edit_form.cust_name) }}
                                </td>
                                <td>نام خانوادگی مشتری :</td>
                                <td>
                                    {{ form_errors(edit_form.cust_family) }}
                                    {{ form_widget(edit_form.cust_family) }}
                                </td>
                            </tr>
                            <tr class="info">
                                <td>ایمیل مشتری :</td>
                                <td>
                                    {{ form_errors(edit_form.cust_email) }}
                                    {{ form_widget(edit_form.cust_email) }}
                                </td>
                                <td> شماره تلفن مشتری :</td>
                                <td>
                                    {{ form_errors(edit_form.cust_phone) }}
                                    {{ form_widget(edit_form.cust_phone) }}
                                </td>
                            </tr>
                            <tr class="success">
                                <td>شماره موبایل مشتری :</td>
                                <td>
                                    {{ form_errors(edit_form.cust_mobile) }}
                                    {{ form_widget(edit_form.cust_mobile) }}
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            </tbody>
                        </table>
                        {{ form_widget(edit_form._token) }}
                        <a class="btn btn-primary" href="{{ path('admin_customer_index') }}">برگشت </a>
                        <button class="btn btn-success tabs-right" type="submit">ویرایش</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends 'HotelreserveBundle::layout_admin.html.twig' %}

{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div style="border: 1px solid #4d3d98;display: block;">
                <div style="background: #4d3d98;height: 36px;display: block;">
                    <span style="float: right;margin: 2px 0 0 5px;padding: 6px 5px 6px 10px; color: #fff; font-size: 14px;">
                            <a href="" class="icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>نمایش لیست آژانس ها</strong>
                    </span>
                </div>
                <div style="display: block;padding: 25px 15px;">
                    <table class="table table-bordered table-condensed" dir="rtl" style="width: 100%;">
                        <thead>
                        <tr>
                            <th style="text-align: center">کدآژانس</th>
                            <th style="text-align: center">نام آژانس</th>
                            <th style="text-align: center">نام کاربر</th>
                            <th style="text-align: center">اقدامات</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td style="text-align: center">{{ entity.id }}</td>
                                <td style="text-align: center">{{ entity.agencyname }}</td>
                                <td style="text-align: center">{{ entity.userEntity }}</td>
                                <td style="text-align: center">
                                    <a class="badge badge-info" href="{{ path('admin_agency_edit', { 'id': entity.id }) }}">ویرایش</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="pagination-centered pagination">
                        {{ knp_pagination_render(entities) }}
                    </div>
                    <a class="btn btn-success" href="{{ path('admin_agency_new') }}">ایجاد</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends 'HotelreserveBundle::layout_admin.html.twig' %}
{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #d24827;display: block;">
                <div class="" style="background: #d24827;height: 36px;display: block;">
                    <span style="float: right;margin: 2px 0 0 5px;padding: 6px 5px 6px 10px; color: #fff; font-size: 14px;">
                        <a href="" class="icon-th-large"></a>
                        <a href="" class="icon-chevron-left"></a> <strong>ثبت نام کاربران سایت </strong>
                    </span>
                </div>
                <div style="display: block;padding: 25px 15px;">
                    <form method="post" {{ form_enctype(form) }}>
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody class="text-error">
                            <tr class="success">
                                <td>
                                    {{ form_label(form.user_firstname) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_firstname) }}
                                    {{ form_widget(form.user_firstname,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                </td>
                                <td>
                                    {{ form_label(form.user_family) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_family) }}
                                    {{ form_widget(form.user_family,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                </td>
                            </tr>
                            <tr class="info">
                                <td>
                                    {{ form_label(form.username) }}
                                </td>
                                <td>
                                    {{ form_errors(form.username) }}
                                    {{ form_widget(form.username) }}
                                </td>
                                <td>
                                    {{ form_label(form.email) }}
                                </td>
                                <td>
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email) }}
                                </td>
                            </tr>
                            <tr class="success">
                                <td>
                                    {{ form_label(form.plainPassword.first) }}
                                </td>
                                <td>
                                    {{ form_errors(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first) }}
                                </td>
                                <td>
                                    {{ form_label(form.plainPassword.second) }}
                                </td>
                                <td>
                                    {{ form_errors(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second) }}
                                </td>
                            </tr>
                            <tr class="info">
                                <td>
                                    {{ form_label(form.user_phone) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_phone) }}
                                    {{ form_widget(form.user_phone,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                </td>
                                <td>
                                    {{ form_label(form.user_mobile) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_mobile) }}
                                    {{ form_widget(form.user_mobile,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                </td>
                            </tr>
                            <tr class="success">
                                <td>
                                    {{ form_label(form.user_city) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_city) }}
                                    {{ form_widget(form.user_city,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                </td>
                                <td>
                                    {{ form_label(form.user_nameBank) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_nameBank) }}
                                    {{ form_widget(form.user_nameBank,{ 'attr' : {'onkeydown' : 'return !(48<=event.keyCode && event.keyCode<=57)&& !(95<event.keyCode && event.keyCode<111)'} }) }}
                                </td>
                            </tr>
                            <tr class="info">
                                <td>
                                    {{ form_label(form.user_accountNumber) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_accountNumber) }}
                                    {{ form_widget(form.user_accountNumber,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                </td>
                                <td>
                                    {{ form_label(form.user_cardNumber) }}
                                </td>
                                <td>
                                    {{ form_errors(form.user_cardNumber) }}
                                    {{ form_widget(form.user_cardNumber,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
      || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
      || (95<event.keyCode && event.keyCode<106)
      || (event.keyCode==8) || (event.keyCode==9)
      || (event.keyCode>34 && event.keyCode<40)
      || (event.keyCode==46) )'} }) }}
                                </td>
                            </tr>
                            <tr class="success">
                                <td>
                                    {{ form_label(form.roles) }}
                                </td>
                                <td colspan="3">
                                        <span style="margin-left: 30px">
                                            {{ form_widget(form.roles[0][0]) }}
                                            {{ form_label(form.roles[0][0],null,{'label_attr':{'style':'display:inline' } }) }}
                                        </span>
                                        <span style="margin-left: 30px">
                                            {{ form_widget(form.roles[0][1]) }}
                                            {{ form_label(form.roles[0][1],null,{'label_attr':{'style':'display:inline' } }) }}
                                        </span>
                                        <span style="margin-left: 30px">
                                            {{ form_widget(form.roles[0][2]) }}
                                            {{ form_label(form.roles[0][2],null,{'label_attr':{'style':'display:inline' } }) }}
                                        </span>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        {{ form_widget(form._token) }}
                        <button class="btn btn-success" type="submit">ایجاد کاربر</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

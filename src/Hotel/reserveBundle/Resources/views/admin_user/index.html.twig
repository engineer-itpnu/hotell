{% extends 'HotelreserveBundle::layout_admin.html.twig' %}

{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div style="border: 1px solid #d24827;display: block;">
                <div style="background: #d24827;height: 36px;display: block;">
                    <span style="float: right;margin: 2px 0 0 5px;padding: 6px 5px 6px 10px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>
                            نمایش لیست کاربران سایت - ویرایش اطلاعات کاربران
                        </strong>
                    </span>
                </div>
                <div style="display: block;padding: 25px 15px;">
                    <table class="table table-bordered table-condensed" style="width: 100%;" dir="rtl">
                        <thead>
                        <tr>
                            <th>کدکاربر</th>
                            <th>نام</th>
                            <th>نام خانوادگی</th>
                            <th>نام کاربری</th>
                            <th>نوع کاربر</th>
                            <th>شماره تلفن</th>
                            <th>شماره موبایل</th>
                            <th>شهر</th>
                            <th>دسترسی</th>
                            <th>اقدامات</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.userfirstname }}</td>
                                <td>{{ entity.userfamily }}</td>
                                <td>{{ entity.username }}</td>
                                <td>
                                    {% if entity.roles[0]== "ROLE_ADMIN" %}
                                        مدیر سایت
                                    {% elseif entity.roles[0]== "ROLE_HOTELDAR" %}
                                        هتل دار
                                    {% else %}
                                        آژانس
                                    {% endif %}
                                </td>
                                <td>{{ entity.userphone }}</td>
                                <td>{{ entity.usermobile }}</td>
                                <td>{{ entity.usercity }}</td>
                                <td>
                                    {% if entity.enabled %}
                                        فعال
                                    {% else %}
                                        غیر فعال
                                    {% endif %}
                                </td>
                                <td>
                                        <a class="badge badge-info" href="{{ path('admin_user_edit', { 'id': entity.id }) }}">edit</a>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                    <div class="pagination-centered pagination">
                        {{ knp_pagination_render(entities) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

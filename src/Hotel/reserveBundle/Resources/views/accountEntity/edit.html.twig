{% extends 'HotelreserveBundle::layout_admin.html.twig' %}
{% block content -%}
    <section class="container"  style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #74B749;display: block;">
                <div class="" style="background: #74B749;height: 36px;display: block;">
                    <span class="" style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>ویرایش اطلاعات پایه ای هتل ها</strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody>
                            <form action="{{ path('accountentity_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                                <input type="hidden" name="_method" value="PUT"/>
                                <tr class="success"><td>مبلغ</td><td>
                                        {{ form_errors(edit_form.price) }}
                                        {{ form_widget(edit_form.price) }}
                                    </td>
                                    <td>نوع پرداخت</td><td>
                                        {{ form_errors(edit_form.type) }}
                                        {{ form_widget(edit_form.type) }}
                                    </td><td></td><td></td>
                                </tr>
                                <tr class="info">
                                    <td>موجودی هتل</td>
                                    <td>
                                        {{ form_errors(edit_form.StockHotel) }}
                                        {{ form_widget(edit_form.StockHotel) }}
                                    </td>
                                    <td style="padding-left: 50px">موجودی آژانس </td><td>
                                        {{ form_errors(edit_form.StockAgency) }}
                                        {{ form_widget(edit_form.StockAgency) }}
                                    </td>
                                    <td style="padding-left: 40px">شماره  پیگیری بانک </td><td>
                                        {{ form_errors(edit_form.NumberPey) }}
                                        {{ form_widget(edit_form.NumberPey) }}
                                    </td>
                                </tr>
                                <tr class="success"><td>تاریخ</td><td>
                                        {{ form_errors(edit_form.DateTime) }}
                                        {{ form_widget(edit_form.DateTime) }}
                                    </td><td></td><td></td><td></td><td></td>
                                </tr>
                                {{ form_widget(edit_form._token) }}
                                <ul style="list-style-type: none"><li>
                                        <button class="btn btn-success tabs-right" type="submit" style="margin-right: 400px">ویرایش</button></li></ul>
                            </form>
                            <tr class="record_actions" style="list-style-type: none">
                                <td><a class="btn btn-primary" href="{{ path('accountentity') }}">برگشت </a></td>
                            </tr>
                            <td>
                                {{ form(delete_form) }}</td>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

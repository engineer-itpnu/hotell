{% set parent="" %}
{% if is_granted("ROLE_ADMIN") %}
    {% set parent= 'HotelreserveBundle::layout_admin.html.twig' %}
{% elseif is_granted("ROLE_HOTELDAR") %}
    {% set parent= 'HotelreserveBundle::layout_hotel.html.twig' %}
{% endif %}
{% extends parent %}
{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('bundles/assets/css/TimeLine.css') }}" media="all" rel="stylesheet" type="text/css"/>
    <script src="{{ asset('bundles/assets/js/timeLine.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/assets/js/jquery.balloon.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            {% if rooms is not null %}
            timeline_header(true,{{ weekDay }});
            {% for room in rooms %}
            {{ render(controller('HotelreserveBundle:Default:getStatusRoomInMonth', { 'roomid': room.id, 'year':year, 'month':month , 'editable':false })) }}
            {% endfor %}
            {% endif %}
        });
    </script>
{% endblock %}
{% block content -%}
    <section class="container" style="width: 95%; margin-top: 20px; margin-bottom: 40px;">
        <div class="span12 responsive" data-tablet="span12 fix-margin" data-desktop="span12">
            <div class="" style="border: 1px solid #88288f;display: block;">
                <div class="" style="background: #88288f;height: 36px;display: block;">
                    <span class=""
                          style="float: right;margin: 2px 0 0;padding: 6px 5px 6px 10px; margin-right: 5px; color: #fff; font-size: 14px;">
                            <a href="" class=" icon-th-large"></a>
                            <a href="" class="icon-chevron-left"></a> <strong>مانیتورینگ وضعیت اتاق ها - ایجاد و ویرایش
                            اتاق های خالی هتل </strong>
                    </span>
                </div>
                <div class="" style="display: block;padding: 25px 15px;">
                    <div class="">
                        <table class="table table-condensed" style="width: 100%;">
                            <tbody>
                            <div>
                                <form method="post">

                                    <table class="table table-condensed">
                                        <tr class=" info">
                                            <td>هتل :</td>
                                            <td>
                                                {{ form_errors(form.hotel) }}
                                                {{ form_widget(form.hotel) }}
                                            </td>
                                            <td>ماه :</td>
                                            <td>
                                                {{ form_errors(form.month) }}
                                                {{ form_widget(form.month) }}
                                            </td>
                                            <td>سال :</td>
                                            <td>
                                                {{ form_errors(form.year) }}
                                                {{ form_widget(form.year) }}
                                            </td>
                                            <td><input type="submit" value="مشاهده"/></td>
                                        </tr>
                                    </table>
                                    {{ form_widget(form._token) }}
                                </form>
                                {% if rooms is not null %}
                                    <a href="{{ path('monitoring_edit',{'hotelid':hotelid, 'year':year, 'month':month}) }}" class="btn btn-primary">ویرایش اتاق ها</a>
                                {% endif %}
                            </div>
                            <br>

                            <div style="width: 100%;overflow-x: scroll;">
                                <div class="timeLine">
                                </div>
                            </div>
                            <div>
                                <div id="tl_cost_viewer">
                                    <div style="direction: rtl;text-align: right;">
                                        <div class="tl_cost_header">مشخصات</div>
                                    </div>
                                    <div id="tl_showCost" style="width: 100%;"></div>
                                </div>
                            </div>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
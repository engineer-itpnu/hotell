{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<div class="pagination-centered">
    {% if first is defined and current != first %}
        <span class="first">
            <a class="icon-fast-forward" href="{{ path(route, query|merge({(pageParameterName): first})) }}"></a>
        </span>
    {% endif %}

    {% if previous is defined %}
        <span class="previous">
            <a class="icon-arrow-right" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"></a>
        </span>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <span class="page ">
                <a class="label label-success" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </span>
        {% else %}
            <span class="label label-important ">{{ page }}</span>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <span class="next ">
            <a class="icon-arrow-left" href="{{ path(route, query|merge({(pageParameterName): next})) }}"></a>
        </span>
    {% endif %}

    {% if last is defined and current != last %}
        <span class="last">
            <a class="icon-fast-backward" href="{{ path(route, query|merge({(pageParameterName): last})) }}"></a>
        </span>
    {% endif %}
</div>
{% endif %}
